.main {
	position: sticky;
	top: 0px;
	background-color: rgba(0, 0, 0, 0.95);
	margin: -10 -8.49999 0 -19;
	box-shadow: 0 7px 2em 14px #000000;
}

.last{
	background-color: rgba(0, 0, 0, 0.95);
	margin: 0 -8.49999 -10 -19;
	box-shadow: 0 7px 2em 14px #000000;
}

li {
	display: inline-block;
	margin-right: 10px;
	margin-left: 10px;
}

ul {
	display: inline-block;
}

a {
	text-decoration: none;
	text-shadow: 0px 0px 1px #f9f2ed, 0px 0px 1px #e9ccb9, 0 0 1em #cc865c;
	color: white;
	font-size: large;
	font-family: "Trajan Pro 3";
	font-size: 22;
}

a:hover {
	color: #f5af64;
	text-shadow: 0px 0px 3px #d97e0f, 0px 0px 2px #fcba03, 0 0 1em #ffd900;
	animation-duration: 0.5s;
    animation-name: glow;
}

@keyframes glow {
 
 from {
color: white;
text-shadow: 0px 0px 1px #f9f2ed, 0px 0px 1px #e9ccb9, 0 0 1em #cc865c;
  }

  to {
    color: #f5af64;
	text-shadow: 0px 0px 3px #d97e0f, 0px 0px 2px #fcba03, 0 0 1em #ffd900;
  }
}

.hmenu {
	position: relative;
    display: inline-block;
}

.hmenu_cont {
	z-index: 1;
	display: none;
    position: absolute;
}

.hmenu_cont a{
	padding: 12px 16px;
    text-decoration: none;
    display: inline-block;
	text-align-last: center;
	font-size: 19;
}

.hmenu:hover .hmenu_cont {
	display:table;
	background-color: rgba(0, 0, 0, 0.65);
	/* background: linear-gradient(0deg, #000000 65%, transparent); */
	box-shadow: 0 20px 2em #000000;
}

.line {
	right: 5%;
	position: absolute;
	margin-top: 20px;
	height:2px;
	width: 90%;
	background: linear-gradient(90deg, transparent, #ffffff, transparent);

	/* background-color: #ffffff; */
	z-index:-2;
}



.pic {
	float: right;
	padding: 10px;
	padding-left: 30px;
}